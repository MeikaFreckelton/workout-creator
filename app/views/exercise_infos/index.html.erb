<p id="notice"><%= notice %></p>

<h1>Exercises</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Reps</th>
      <th>Time</th>
      <th>Sets</th>
      <th>Weight needed</th>
      <th>Equipment needed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercise_infos.each do |exercise_info| %>
      <tr>
        <td><%= exercise_info.name %></td>
        <td><%= exercise_info.reps %></td>
        <td><%= exercise_info.time %></td>
        <td><%= exercise_info.sets %></td>
        <td><%= exercise_info.weight_needed %></td>
        <td><%= exercise_info.equipment_needed %></td>
        <td><%= link_to 'Show', exercise_info %></td>
        <td><%= link_to 'Edit', edit_exercise_info_path(exercise_info) %></td>
        <td><%= link_to 'Destroy', exercise_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

