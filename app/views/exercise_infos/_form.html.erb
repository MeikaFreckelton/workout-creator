
<%= simple_form_for(@exercise_info) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  

  
<% end %>



<%= form_with model: @exercise_info do |f| %>
  <div class="form-inputs">
    <div>
    <%= f.label :use_existing_exercise %>
    <%= f.collection_select :name, @exercises, :id, :name %>
    <p>Or add custom exercise</p>
    <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
    </div>
    <div>
    <%= f.label :reps %>
    <%= f.number_field :reps %>
    </div>
    <div>
    <%= f.label :time %>
    <%= f.number_field :time %>
    </div>
    <div>
    <%= f.label :sets %>
    <%= f.number_field :sets %>
    </div>
    <div>
    <%= f.label :weight_needed %>
    <%= f.number_field :weight_needed %>
    </div>
    <div>
    <%= f.label :equipment_needed %>
    <%= f.text_field :equipment_needed %>
    </div>
    <%#= f.association :workout_info %>
    <div class="form-actions">
    <%= f.button :submit %>
    </div>
  </div>
<% end %>
